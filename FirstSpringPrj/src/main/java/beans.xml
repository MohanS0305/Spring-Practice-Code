<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="com.spring.FirstSpringPrj"></context:component-scan>
   <!-- bean definitions go here -->
   
   <bean id="phone" class="com.spring.FirstSpringPrj.Phone">
   		 
   		<property name="pBrand" value="Nokia"></property>
   		 <property name="pRam" value="8"></property>
   		 <property name="pStorage" value="64"></property>
   		 
   		 <constructor-arg name="pBrand" value="infinix 10 Pro"></constructor-arg>
   		 <constructor-arg name="pRam" value="16"></constructor-arg>
   		 <constructor-arg name="pStorage" value="128"></constructor-arg>
   </bean>
  

</beans>